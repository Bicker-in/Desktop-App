{
  "name": "bickerin",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "vite",
    "clean": "rm -fR ./build",
    "build": "vite build && mv dist build",
    "lint": "eslint ./src --ext .tsx,.ts --max-warnings 0",
    "test": "jest",
    "tauri": "tauri",
    "run-app": "npm run tauri dev",
    "build-app": "npm run clean && npm run build && npm run tauri build",
    "typecheck": "tsc --noEmit",
    "typewatch": "tsc --noEmit --watch"
  },
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@fontsource/roboto": "^4.5.1",
    "@tauri-apps/api": "^1.0.0-beta.8",
    "@testing-library/user-event": "^13.5.0",
    "eslint-config-airbnb": "^18.2.1",
    "formik": "^2.2.9",
    "framer-motion": "^4.1.17",
    "history": "^5.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.0.0-beta.10",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-preset-nano-react-app": "^0.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^3.8.3",
    "vite": "^2.6.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,ts,tsx}": [
      "eslint ./src --fix --ext .tsx,.ts --max-warnings 0"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
